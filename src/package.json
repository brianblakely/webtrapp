{
  "name": "webtrapp",
  "productName": "WebTrapp",
  "version": "1.0.0",
  "description": "Run a Web app as a local executable.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run package-win && npm run package-lin && npm run package-mac",
    "package-win": "electron-packager . --out=../dist --icon=icons/icon.ico --platform=win32 --arch=ia32 --prune=true --overwrite",
    "package-lin": "electron-packager . --out=../dist --icon=icons/png/1024x1024.png --platform=linux --arch=all --prune=true --overwrite",
    "package-mac": "electron-packager . --out=../dist --icon=icons/icon.icns --platform=darwin --arch=x64 --prune=true --overwrite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brianblakely/webtrapp.git"
  },
  "author": "Brian Blakely",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brianblakely/webtrapp/issues"
  },
  "homepage": "https://github.com/brianblakely/webtrapp#readme",
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.12.0"
  }
}
